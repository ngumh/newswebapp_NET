@model news.Models.LoginMD
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/loginlayout.cshtml";
}
<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <form class="login100-form validate-form" action="/Admin/Login/Index" method="post">
                <h1 class="p-b-34" style="font-family: Poppins-Regular;
                                            color: #555555;
                                            line-height: 1.2;
                                            text-transform: uppercase;
                                            letter-spacing: 2px;
                                            text-align: center;
                                            width: 100%;
                                            display: block;">
                Welcome Back!
                </h1>
                <span class="login100-form-title p-b-34">
                    Account Login
                </span>
                @Html.AntiForgeryToken()
                <div class="wrap-input100 rs1-wrap-input100 validate-input m-b-20" data-validate="Type user name">
                    @Html.TextBoxFor(Model => Model.username, new { @id = "inputEmail", @class = "input100", @placeholder = "Username", @required = "required" })
                    <span class="focus-input100"></span>
                </div>
                <div class="wrap-input100 rs2-wrap-input100 validate-input m-b-20" data-validate="Type password">
                    @Html.PasswordFor(Model => Model.password, new { @id = "inpupassword", @class = "input100", @placeholder = "Password", @required = "required" })
                    <span class="focus-input100"></span>
                </div>
                @Html.ValidationSummary(true, null, new { @class = "alert alert-danger validate-input" })
                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        Sign in
                    </button>
                </div>

                <div class="w-full text-center p-t-27 p-b-239">
                    <span class="txt1">
                        Forgot
                    </span>

                    <a href="#" class="txt2">
                        User name / password?
                    </a>
                </div>

                <div class="w-full text-center">
                    <a href="#" class="txt3">
                        Sign Up
                    </a>
                </div>


            </form>

            <div class="login100-more sad">

            </div>
        </div>
    </div>
</div>



<div id="dropDownSelect1"></div>
<style>
    .sad {
        background-image: url("https://localhost:44301/Areas/Admin/Content/img/img.jpg")
    }
</style>