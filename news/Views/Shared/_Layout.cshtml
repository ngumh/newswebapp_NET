<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="icon" href="~/img/core-img/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="geo.region" content="VN-SG" />
    <meta name="geo.placename" content="Số 98, Ngô Tất Tố, Phường 19, Quận Bình Thạnh, TP. Hồ Chí Minh" />
    <meta name="geo.position" content="13.290403;108.426511" />
    <meta name="ICBM" content="13.290403, 108.426511" />
    <meta name="description" content="ChangChang Inc là trang tin tức hàng đầu Việt Name" />
    <meta name="keywords" content="ChangChang, Tin tức, thông tin, thể thao, sức khỏe" />
    <meta name="department" content="Trụ sở chính, phòng sale" />
    <title>@ViewBag.Title - Lifestyle Magazine</title>

    @Styles.Render("~/Content/css")
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <style>
        #map {
            height: 100%;
        }
    </style>
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
</head>

<body>
    <!-- ##### Header Area Start ##### -->
    <header class="header-area">
        <!-- Top Header Area -->
        <div class="top-header-area">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="top-header-content d-flex align-items-center justify-content-between">
                            <!-- Logo -->
                            <div class="logo" style="width: 25%; height: 50px">
                                <a href="/" asp-controller="Home" asp-action="Index"><img src="~/img/core-img/logo.png" alt=""> </a>
                            </div>
                            <!-- Login Search Area -->
                            <div class="login-search-area d-flex align-items-center">
                                <!-- Search Form -->

                                <div class="search-form">
                                    <form action="@Url.Action("Search", "Home")" method="get">
                                        <input type="search" name="key" class="form-control" placeholder="Search" required>
                                        <button type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Navbar Area -->
        <div class="newspaper-main-menu" id="stickyMenu">
            <div class="classy-nav-container breakpoint-off">
                <div class="container">
                    <!-- Menu -->
                    <nav class="classy-navbar justify-content-between" id="newspaperNav">
                        <!-- Logo -->
                        <div class="logo">
                            <a asp-controller="Home" asp-action="Index"><img src="~/img/core-img/logo.png" alt=""></a>
                        </div>
                        <!-- Navbar Toggler -->
                        <div class="classy-navbar-toggler">
                            <span class="navbarToggler"><span></span><span></span><span></span></span>
                        </div>
                        <!-- Menu -->
                        <div class="classy-menu">
                            <!-- close btn -->
                            <div class="classycloseIcon">
                                <div class="cross-wrap"><span class="top"></span><span class="bottom"></span></div>
                            </div>
                            <!-- Nav Start -->
                            <div class="classynav">
                                <ul>
                                    <li class="active"><a asp-action="Index" asp-controller="Home" href="@Url.Action("")">Home</a></li>
                                    <li><a href="@Url.Action("Category", "Home", new { id = "Breakingnews"})">Tin Nóng</a></li>
                                    @{ Html.RenderAction("getCatagories");}
                                    <li><a href="/contact">Liên Lạc</a></li>
                                </ul>
                            </div>
                            <!-- Nav End -->
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ##### Hero Area Start ##### -->
    <div class="hero-area">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 col-lg-8">
                    <!-- Breaking News Widget -->
                    <div class="breaking-news-area d-flex align-items-center">
                        <div class="news-title">
                            <p>Tin Nóng</p>
                        </div>
                        <div id="breakingNewsTicker" class="ticker">
                            <ul>
                                @{ Html.RenderAction("getBreakingNews");}
                            </ul>
                        </div>
                    </div>
                    <!-- Breaking News Widget -->
                    <div class="breaking-news-area d-flex align-items-center mt-15">
                        <div class="news-title title2">
                            <p>Tin Thế Giới</p>
                        </div>
                        <div id="internationalTicker" class="ticker">
                            <ul>
                                @{ Html.RenderAction("lst3InterNews");}
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- Hero Add -->
                <div class="col-12 col-lg-4">
                    <div class="hero-add">
                        <a href="https://www.traveloka.com" target="_blank"><img src="~/img/bg-img/hero-add.gif" alt=""></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ##### Hero Area End ##### -->
    <!-- ##### Blog Area Start ##### -->
    <div class="blog-area section-padding-0-80">
        <div class="container">
            <div class="row">
                <div class="col-12 col-lg-8">
                    @RenderBody()
                </div>
                <div class="col-12 col-lg-4">
                    <div class="blog-sidebar-area">
                        <!-- Latest Posts Widget -->
                        <div class="latest-posts-widget mb-50">
                            @{ Html.RenderAction("lstNewestPostOfCategories");}
                        </div>
                        <!-- Popular News Widget -->
                        <div class="popular-news-widget mb-50">
                            <h3>4 Most Popular News</h3>

                            @{ Html.RenderAction("lst4PopularNews");}
                        </div>
                        <!-- Newsletter Widget -->
                        <div class="newsletter-widget mb-50">
                            <h4>Newsletter</h4>
                            <p>Orci varius natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus.</p>
                            <form action="@Url.Action("Subcribe", "Home")" method="post">
                                <input type="text" name="name" placeholder="Name">
                                <input type="email" name="email" placeholder="Email">
                                <button type="submit" class="btn w-100">Subscribe</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ##### Blog Area End ##### -->
    <footer class="footer-area">
        <!-- Main Footer Area -->
        <div class="main-footer-area">
            <div class="container">
                <div class="row">
                    <!-- Footer Widget Area -->
                    <div class="col-12 col-sm-6 col-lg-4">
                        <div class="footer-widget-area mt-80">
                            <!-- Footer Logo -->
                            <div class="footer-logo">
                                <a href="/"><img src="~/img/core-img/logo.png" alt=""></a>
                            </div>
                            <!-- List -->
                            <ul class="list">
                                <li><a href="mailto:vjpking5913@gmail.com">vjpking5913@gmail.com</a></li>
                                <li><a href="tel:+84385269240">+84385269240</a></li>
                                <li><a href="http://yoursitename.com">News</a></li>
                            </ul>
                        </div>
                    </div>
                    <!-- Footer Widget Area -->
                    <!-- Footer Widget Area -->
                    <div class="col-12 col-sm-4 col-lg-2">
                        <div class="footer-widget-area mt-80">
                            <!-- Title -->
                            <h4 class="widget-title">Featured</h4>
                            <!-- List -->
                            <ul class="list">
                                @{ Html.RenderAction("getCatagories");}
                            </ul>
                        </div>
                    </div>
                    <div class="col-12 col-sm-12 col-lg-2">
                        <div class="footer-widget-area mt-80">
                            <div class="mapouter">
                                <div class="gmap_canvas"><iframe width="500" height="400" id="gmap_canvas" src="https://maps.google.com/maps?q=%C4%90%E1%BA%A1i%20H%E1%BB%8Dc%20T%C3%B4n%20%C4%90%E1%BB%A9c%20Th%E1%BA%AFng%2C98%20%C4%90%C6%B0%E1%BB%9Dng%20Ng%C3%B4%20T%E1%BA%A5t%20T%E1%BB%91%2C%20Ph%C6%B0%E1%BB%9Dng%2019%2C%20B%C3%ACnh%20Th%E1%BA%A1nh%2C%20H%E1%BB%93%20Ch%C3%AD%20Minh&t=&z=15&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://www.embedgooglemap.net/blog/elementor-pro-discount-code-review/">elementor review</a></div>
                                <style>
                                    .mapouter {
                                        position: relative;
                                        text-align: right;
                                        height: 400px;
                                        width: 500px;
                                    }

                                    .gmap_canvas {
                                        overflow: hidden;
                                        background: none !important;
                                        height: 400px;
                                        width: 500px;
                                    }
                                </style>
                            </div>
                        </div>
                    </div>
                    <!-- Footer Widget Area -->
                </div>
            </div>
        </div>
        <!-- Bottom Footer Area -->
        <div class="bottom-footer-area">
            <div class="container h-100">
                <div class="row h-100 align-items-center">
                    <div class="col-12">
                        <!-- Copywrite -->
                        <p>
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                            Copyright &copy;
                            <script>document.write(new Date().getFullYear());</script> All rights reserved edit by <a href="https://facebook.com/clooneymai" target="_blank">Mai Hồng Ngự</a>
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div id="map"></div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        var map;
        function initMap() {
            map = new google.maps.Map(document.getElementById('map'), {
                center: { lat: -34.397, lng: 150.644 },
                zoom: 8
            });
        }
    </script>
    <link rel="stylesheet" href="~/Content/fontawesome.css" />
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBpzHEbyHrneO2st4v9Av2leCsCdd_c064&callback=initMap">
    </script>
</body>
</html>
